<%= form_tag recipes_path do %>
  <div>
    <%= label_tag "recipe_form[title]", "Title" %>
    <%= text_field_tag "recipe_form[title]" %>
  </div>
  <div>
    <%= label_tag "recipe_form[directions]", "Directions" %>
    <%= text_area_tag "recipe_form[directions]" %>
  </div>
  <div>
    <%= label_tag "recipe_form[image]", "Image Link" %>
    <%= text_field_tag "recipe_form[image]" %>
  </div>
  <div>
    <% Ingredient.all.each do |ingredient| %>



      <%= check_box_tag "recipe_form[ingredients][]", ingredient.id, false, id: "ingredient_#{ingredient.id}" %>
      <%= label_tag "ingredient_#{ingredient.id}", ingredient.name %>
    <% end %>
  </div>
  <%= submit_tag %>
<% end %>
