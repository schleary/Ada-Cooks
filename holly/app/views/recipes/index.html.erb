RECIPES INDEX

<% if @recipes.any?%>
  <% @recipes.each do |recipe| %>
    <%= recipe.image %>
    <h2><%= link_to recipe.title, recipes_show_path(recipe) %>
    <small><%= link_to recipe.directions, recipes_show_path(recipe) %></small>
    </h2>
  <% end %>
    </br>
  <%= link_to "View More recipes", recipes_path %>
  <% else %>
    Oops... There are not recipes yet,
    <%= link_to "add one.", recipes_new_path %>
<% end %>
